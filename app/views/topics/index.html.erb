<div class="row">
  <h1>Lesson Topics</h1>

  <div class="row">
    <div class="column large-8 content">
      <%= managed_content("topics-intro") %>
    </div>

    <% if Flipper.enabled?(:lesson_plans) %>
      <div class="column large-4">
        <div style="font-size: 0.8rem;
                    line-height: 1.2rem;
                    border: 2px solid #c7dddb;
                    padding: 1rem;">
          <p>In the Lesson Planner, you can organize your selected lessons to prepare for your next teaching opportunity.</p>

          <%= link_to "See Lesson Planner", current_lesson_plan_path,
                      class: "lesson-planner-link arrow-link-small",
                      style: "float: none" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render "tags/nav", tags: @tags %>
</div>

<% cache(cache_key_for_topics(@topics)) do %>
  <% @topics.each_slice(2) do |row| %>
    <div class="row">
      <% row.each do |topic| %>
      <div class="topics-cards large-6 columns end">
        <%= render topic %>
      </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<div style="clear: both"></div>

<%= paginate @topics %>
