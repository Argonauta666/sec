<div class="print-header">
  <%= image_tag "print-header.png" %>
</div>
<div class="header-wrapper no-print">
  <div class="top-bar">
    <div class="back-ssd">
      <%= link_to "https://ssd.eff.org" do %>
        <span class="back-arrow fa fa-chevron-left"></span>

        <span class="back-text">
          <%= t("ui.goto") %> ssd.eff.org
        </span>
      <% end %>
    </div>

    <div class="tagline">
      <div class="tagline-bevel">&nbsp;</div>
      <div class="eff-tagline">
        <%= t(".project_of") %> <%= link_to t("eff"), "https://eff.org" %>
      </div>
    </div>

    <div class="search">
      <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :q, params[:q], class: "search-input" %>
        <%= submit_tag t(".search").upcase, name: nil %>
      <% end %>
    </div>
  </div>

  <header>
    <div class="logo">
      <a href="/">
        <%= image_tag("sec-logo.png", :alt => "SEC logo") %>
      </a>
    </div>
    <div class="site-name">
      <%= link_to t("sec"), "/" %>

      <div class="subtext show-for-medium">
        <%= t(".tagline") %>
      </div>
    </div>

    <div class="search">
      <%= form_tag search_path, method: :get do %>
        <div class="flex-field">
          <%= text_field_tag :q, params[:q], placeholder: t(".search").concat("..."), class: "search-input" %>
        </div>

        <%= button_tag type: "submit" do %><% end %>
      <% end %>
    </div>
  </header>
</div>

<nav class="no-print" id="main-menu" aria-labelledby="main-menu-label">
  <h2 id="main-menu-label" class="show-for-sr">Main Menu</h2>
  <ul class="row">
    <li><%= link_with_aria_current t("layouts.menu.articles"), articles_path %></li>
    <li><%= link_with_aria_current t("layouts.menu.topics"), topics_path %></li>
    <li><%= link_with_aria_current t("layouts.menu.materials"), materials_path %></li>
    <li><%= link_with_aria_current t("layouts.menu.blog"), blog_path %></li>
  </ul>
</nav>
