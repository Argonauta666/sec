<div class="print-header">
  <%= image_tag "print-header.png" %>
</div>
<div class="header-wrapper no-print">
  <div class="top-bar">
    <div class="back-ssd">
      <%= link_to "https://ssd.eff.org" do %>
        <span class="back-arrow fa fa-chevron-left"></span>

        <span class="back-text">
          <%= t("Go to") %> ssd.eff.org
        </span>
      <% end %>
    </div>

    <div class="tagline">
      <div class="tagline-bevel">&nbsp;</div>
      <div class="eff-tagline">
        <%= t("A Project of the") %>
        <%= link_to t("Electronic Frontier Foundation"), "https://eff.org" %>
      </div>
    </div>

    <div class="search">
      <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :q, params[:q], class: "search-input" %>
        <%= submit_tag t("SEARCH"), name: nil %>
      <% end %>
    </div>
  </div>

  <header>
    <div class="logo">
      <a href="/">
        <%= image_tag("sec-logo.png", :alt => "SEC logo") %>
      </a>
    </div>
    <div class="site-name">
      <%= link_to t("Security Education Companion"), "/" %>

      <div class="subtext show-for-medium">
        <%= t("A free resource for digital security educators") %>
      </div>
    </div>

    <div class="search">
      <%= form_tag search_path, method: :get do %>
        <div class="flex-field">
          <%= text_field_tag :q, params[:q], placeholder: "#{t('Search')}...", class: "search-input" %>
        </div>

        <%= button_tag type: "submit" do %><% end %>
      <% end %>
    </div>
  </header>
</div>

<nav class="no-print" id="main-menu" aria-labelledby="main-menu-label">
  <h2 id="main-menu-label" class="show-for-sr">Main Menu</h2>
  <ul class="row">
    <li><%= link_with_aria_current t("Security Education 101"), articles_path %></li>
    <li><%= link_with_aria_current t("Lessons"), topics_path %></li>
    <li><%= link_with_aria_current t("Teaching Materials"), materials_path %></li>
    <li><%= link_with_aria_current t("Security News"), blog_path %></li>
  </ul>
</nav>
