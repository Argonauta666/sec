<div class="tags">
  <%= link_to t(".all"), url_for, class: params[:tag].present? ? "" : "active" %>

  <% @tags[0, 7].each do |tag| %>
    <%= link_to tag.name, url_for(tag: tag.name),
          class: tag.name == params[:tag] ? "active" : "" %>
  <% end %>

  <% if @tags.size > 7 %>
    <a class="expand-collapsed">...</a>

    <span class="collapse">
      <% @tags[7..-1].each do |tag| %>
        <%= link_to tag.name, url_for(tag: tag.name),
            class: tag.name == params[:tag] ? "active" : "" %>
      <% end %>
    </span>
  <% end %>
</div>
