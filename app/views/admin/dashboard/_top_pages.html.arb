panel title do
  table do
    thead do
      tr do
        th "Label"
        th "Unique Pageviews"
        th "Pageviews"
      end
    end
    tbody do
      pages.each do |page|
        tr do
          td page["nb_visits"]
          td page["nb_hits"]
        end
      end
    end
  end
  div class: "padded" do
    a "See more top pages", href: Matomo.top_pages_url
  end
end
