panel "Top Referrers (Previous 30 Days)" do
  table do
    thead do
      tr do
        th "Label"
        th "Visits"
        th "Actions per Visit"
      end
    end
    tbody do
      referrers.each do |referrer|
        tr do
          td referrer.label
          td referrer.visits
          td referrer.actions_per_visit
        end
      end
    end
  end
  div class: "padded" do
    a "See more top referrers", href: Matomo.top_referrers_url
  end
end
