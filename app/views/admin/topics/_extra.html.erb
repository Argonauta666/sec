<%= semantic_form_for(topic, url: admin_topic_path(topic), remote: true) do |f| %>
  <%= f.inputs do %>
    <% f.input :icon, collection: icons_collection,
                      input_html: { class: "select2 icon-gallery" } %>

    <% f.input :next_topic, input_html: { class: "select2" } %>

    <% f.input :slug, hint: "Leave blank to auto-generate" %>

    <% f.input :tags,
             as: :select,
             multiple: true,
             collection: tags_collection,
             input_html: { class: "select2" } %>
  <% end %>

  <%= f.inputs class: 'inputs inline-choice' do %>
    <% f.input :published?, as: :radio %>
  <% end %>

  <%= render partial: "admin/shared/update_extras", locals: {f: f} %>
<% end %>
