<%= semantic_form_for(material, url: admin_material_path(material), remote: true) do |f| %>
  <%= f.inputs do %>
    <% f.input :slug, hint: "Leave blank to auto-generate" %>
  <% end %>

  <%= f.inputs class: "inputs inline-choice" do %>
    <% f.input :published?, as: :radio %>
  <% end %>

  <%= render partial: "admin/shared/update_extras", locals: {f: f} %>
<% end %>
