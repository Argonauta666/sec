<%= semantic_form_for(blog_post, url: admin_blog_post_path(blog_post), remote: true) do |f| %>
  <%= f.inputs do %>
    <% f.input :slug, hint: t("Leave blank to auto-generate") %>

    <% f.input :tags,
         as: :select,
         multiple: true,
         collection: tags_collection,
         input_html: { class: "select2" } %>
  <% end %>

  <%= f.inputs class: 'inputs inline-choice' do %>
    <% f.input :published?, as: :radio %>
  <% end %>

  <%= render partial: "admin/shared/update_extras", locals: {f: f} %>
<% end %>
